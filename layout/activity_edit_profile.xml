<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#555879"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/clinic_flogo"
            android:contentDescription="Logo" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#F4EBD3"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Form fields -->
        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/profile_email"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/profile_phone"
                android:hint="Phone Number"
                android:inputType="phone"
                android:digits="0123456789"
                android:maxLength="11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/profile_ic"
                android:hint="IC Number (e.g., 990101-01-1234)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/profile_age"
                android:hint="Age"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF" />

            <Spinner
                android:id="@+id/profile_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Blood Type"
                android:textColor="#FFFFFF" />

            <RadioGroup
                android:id="@+id/profile_blood"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/blood_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="#FAF8F8" />
                <RadioButton
                    android:id="@+id/blood_b"
                    android:text="B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FAF8F8" />
                <RadioButton
                    android:id="@+id/blood_ab"
                    android:text="AB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FAF8F8" />
                <RadioButton
                    android:id="@+id/blood_o"
                    android:text="O"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FAF8F8" />
            </RadioGroup>

            <EditText
                android:id="@+id/profile_address"
                android:hint="Home Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/profile_emergency_name"
                android:hint="Emergency Contact Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/profile_emergency_phone"
                android:hint="Emergency Phone Number"
                android:inputType="phone"
                android:digits="0123456789"
                android:maxLength="11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/profile_emergency_relationship"
                android:hint="Relationship (e.g. Mother)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF" />

            <Button
                android:id="@+id/btn_save_profile"
                android:text="Save Profile"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
